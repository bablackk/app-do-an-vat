<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Successful_Food">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="225.97dp"
            android:layout_gravity="center"
            android:src="@drawable/banner"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Đặt hàng thành công"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp">
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:gravity="center"
                android:text="Cảm ơn bạn vì đã đặt hàng, shiper đang giao đến bạn"/>
            <ImageView
                android:layout_width="22dp"
                android:layout_height="19.34dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/icon_heart_red"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/textView"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_back_to_home"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:background="@drawable/background_hert_drawble"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Trở về"
        android:textAllCaps="false"
        android:textSize="32sp"/>
</RelativeLayout>