<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">
    <RelativeLayout
        android:id="@+id/relativeLayout_main"
        android:layout_width="331dp"
        android:layout_marginLeft="28dp"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:text="Menu"
            android:textSize="36dp" />

        <ImageView
            android:id="@+id/img_Avatar_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            tools:srcCompat="@tools:sample/avatars" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/relativeLayout_main"
        android:id="@+id/relativeLayot_Share"
        android:layout_width="335dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/share_drawble"
        android:padding="2dp">
        <ImageView
            android:id="@+id/img_Search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/item_search"/>
        <EditText
            android:id="@+id/edt_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_Search"
            android:layout_marginLeft="5dp"
            android:text="Luong beo"
            android:textSize="20dp"
            android:backgroundTint="#D4D0D0"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/relativeLayot_Share"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/frame_Layout"
        tools:ignore="UnknownId">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout

                android:layout_marginTop="12dp"
                android:layout_width="349dp"
                android:layout_height="129dp"
                android:layout_gravity="center"
                android:background="@drawable/banner_drawable">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90.3dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/banner"/>
                <TextView
                    android:id="@+id/tv_free_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Shipping"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:textSize="30sp"
                    android:textColor="#D98A54"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:layout_below="@+id/tv_free_shipping"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:text="Hóa đơn trên 100k"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_Type_Product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deal Hot"
                    android:textColor="@color/black"
                    android:textSize="32sp" />

                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="24.15dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/deal_hot" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_deal_hot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="32sp"
                    android:text="Phổ Biến"/>
                <ImageView
                    android:layout_width="31dp"
                    android:layout_height="30.58dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icon_star"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_Product"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/action_bar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>
</RelativeLayout>