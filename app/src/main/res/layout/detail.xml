<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_add_to_cart"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="348dp"
                android:background="@drawable/banner_drawable"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/background_return">

                        <Button
                            android:id="@+id/btn_Exit"
                            android:layout_width="14.82dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_return" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="24dp"
                        android:background="@drawable/background_hert_drawble">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="21dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_heart"/>
                    </FrameLayout>

                </RelativeLayout>
                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:src="@drawable/squash_tea"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name_prodcuct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="40sp"
                    android:layout_marginLeft="19dp"
                    android:textStyle="bold"
                    android:text="Trà bí đao"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/icon_star"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="4.7"
                        android:layout_marginLeft="6.63dp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="(25+)"
                        android:layout_marginRight="12dp"
                        android:layout_marginLeft="6.63dp"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F35F30"
                    android:textSize="35sp"
                    android:layout_marginLeft="19dp"
                    android:textStyle="bold"
                    android:text="35.000"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14.4dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true">
                    <Button
                        android:id="@+id/btn_subtract_product"
                        android:layout_width="30.6dp"
                        android:layout_height="30.6dp"
                        android:background="@drawable/bg_item_add_product"
                        android:text="–"
                        android:textSize="20dp"
                        android:textColor="#F35F30"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_marginLeft="14.4dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <Button
                        android:id="@+id/btn_add_product"
                        android:layout_width="30.6dp"
                        android:layout_height="30.6dp"
                        android:text="+"
                        android:layout_marginLeft="14.4dp"
                        android:textSize="20dp"
                        android:textColor="#F35F30"
                        android:background="@drawable/bg_item_add_product"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_title_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="37dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="10dp"
                android:text="Trà bí đao ngọt ngào, thanh mát, giúp giải nhiệt tốt."/>
            <View
                android:layout_width="331dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#DDDEE0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="19dp"
                android:textColor="@color/black"
                android:text="Topping"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_topping"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/background_hert_drawble"
        android:text="Thêm vào giở hàng-46.000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>