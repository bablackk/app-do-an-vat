<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:background="@drawable/item_product_drawble"
    android:orientation="vertical"
    android:layout_marginLeft="18dp">
        <ImageView
            android:id="@+id/img_deal_hot_product"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/milk_tea_olong" />
        <TextView
            android:id="@+id/tv_name_deal_hot_product"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Trà sữa Olong"
            android:textColor="@color/black"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/tv_price_origin_deal_hot_product"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@drawable/underline"
            android:text="50.000"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_price_deal_hot_product"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="8dp"
            android:text="45.000"
            android:textColor="@color/black"
            android:textSize="11sp" />

</LinearLayout>